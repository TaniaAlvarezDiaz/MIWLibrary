<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/card_view_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dim_card_view_margin"
    app:cardElevation="@dimen/dim_card_view_elevation"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/library_card_item_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/library_card_item_linear_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/library_card_item_linear_info"
            tools:ignore="ContentDescription"
            app:srcCompat="@mipmap/ic_launcher"/>

        <LinearLayout
            android:id="@+id/library_card_item_linear_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dim_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/library_card_item_image"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/library_card_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dim_14_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/library_card_item_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/dim_14_sp" />

            <TextView
                android:id="@+id/library_card_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dim_12_sp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <ImageButton
                android:id="@+id/library_card_item_favorite"
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                tools:ignore="ContentDescription"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_favorites" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>